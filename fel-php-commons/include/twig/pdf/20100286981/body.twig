    <table cellspacing="0" style="width:100%;font-size:11;">
        <thead style="color:white;">
            <tr style="text-align:center;background:black">
                <th style="border:solid 1px #000000;width:15%;padding:5 0 5 0" >Cantidad</th>
                <th style="border:solid 1px #000000;width:15%;padding:5 0 5 0" >Unidad</th>
                <th style="border:solid 1px #000000;width:15%;padding:5 0 5 0" >Código</th>
                <th style="border:solid 1px #000000;width:15%;padding:5 0 5 0" >Descripción</th>
                <th style="border:solid 1px #000000;width:10%;padding:5 0 5 0" >Precio Unitario</th>
                <th style="border:solid 1px #000000;width:15%;padding:5 0 5 0" >% Dscto.</th>
                <th style="border:solid 1px #000000;width:15%;padding:5 0 5 0" >Importe</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th >&nbsp;</th>
                <th style="border-left:solid 1px #000000;border-bottom:solid 1px #000000;text-align:right;padding:0 6 0 0;" colspan="2">
                    Algun total no se 
                </th>
                <th style="border-left:solid 1px #000000;border-bottom:solid 1px #000000;text-align:right;border-right:solid 1px #000000;padding:0 6 0 0;">
                    algun monto
                </th>
            </tr>
        </tfoot>
        <tbody>
            <tr>
                <td colspan="7" style="border-left:solid 1px #000000;border-right:solid 1px #000000;">&nbsp;</td>
            </tr>
            {% for item in items %}
            <tr>
                <!-- comprobante -->
                <td style="width:15%;text-align:center;border-left:solid 1px #000000;">
                    {{ item.cantidad }}
                </td>
                <td style="width:15%;text-align:center">
                    {{ item.unidad }}
                </td>
                <td style="width:15%;text-align:center">
                    {{ item.datos.codigo }}
                </td>                
                <td style="width:15%;text-align:center">
                    {{ item.datos.descripcion }}
                </td>
                <td style="width:10%;text-align:center">
                    {{ item.precio_unitario.facturado }}
                </td>
                <!-- fecha emision -->
                <td style="width:15%;text-align:center">
                    {{ '0.00' }}
                </td>
                <!-- Total a pagar -->
                <td style="width:15%;text-align:right;border-right:solid 1px #000000;padding:0 6 0 0;">
                    {{ item.valor_venta }}
                </td>
            </tr>
