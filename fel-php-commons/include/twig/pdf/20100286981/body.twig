{% import 'default/macros.twig' as tool %}

    <table cellspacing="0" style="width:100%;font-size:11;">
        <thead>
            <tr style="text-align:center;">
                <th style="border-bottom:dashed 1px #000000;border-top:solid 1px #000000;border-left:solid 1px #000000;width:10%;padding:5 0 5 0" >Cant.</th>
                <th style="border-bottom:dashed 1px #000000;border-top:solid 1px #000000;width:10%;padding:5 0 5 0" >Cod.</th>
                <th style="border-bottom:dashed 1px #000000;border-top:solid 1px #000000;width:40%;padding:5 0 5 0" >Descripci√≥n</th>
                <th style="border-bottom:dashed 1px #000000;border-top:solid 1px #000000;width:15%;padding:5 0 5 0" >Precio Unitario</th>
                <th style="border-bottom:dashed 1px #000000;border-top:solid 1px #000000;width:10%;padding:5 0 5 0" >% Dscto.</th>
                <th style="border-bottom:dashed 1px #000000;border-top:solid 1px #000000;border-right:solid 1px #000000;width:15%;padding:5 0 5 0" >Importe</th>
            </tr>
        </thead>
        <tfoot>
            <tr style="text-align:center;">
                <th colspan="2" style="border-bottom:dashed 1px #000000;border-top:solid 1px #000000;border-left:solid 1px #000000;padding:5 0 5 0" >Cuenta Anterior</th>
                <th colspan="1" style="border-bottom:dashed 1px #000000;border-top:solid 1px #000000;padding:5 0 5 0" >Cuenta General</th>
                <th style="border-bottom:dashed 1px #000000;border-top:solid 1px #000000;padding:5 0 5 0" >Valor Venta</th>
                <th style="border-bottom:dashed 1px #000000;border-top:solid 1px #000000;padding:5 0 5 0" >Total IGV</th>
                <th style="border-bottom:dashed 1px #000000;border-top:solid 1px #000000;border-right:solid 1px #000000;padding:5 0 5 0" >TOTAL</th>
            </tr>
            <tr style="text-align:center">
                <td colspan="2" style="padding:5 0 5 0;border-bottom:solid 1px #000000;border-left:solid 1px #000000;">---</td>
                <td colspan="1" style="padding:5 0 5 0;border-bottom:solid 1px #000000;">---</td>
                <td style="padding:5 0 5 0;border-bottom:solid 1px #000000;">{{ total.lineas }}</td>
                <td style="padding:5 0 5 0;border-bottom:solid 1px #000000;">{{ impuestos[0].monto }}</td>
                <td style="padding:5 0 5 0;border-bottom:solid 1px #000000;border-right:solid 1px #000000;">{{ total.pagable }}</td>
                
            </tr>
        </tfoot>
        <tbody>
            {% for item in items %}
            <tr>
                <!-- comprobante -->
                <td style="text-align:center;border-left:solid 1px #000000;">
                    {{ item.cantidad }}
                </td>
                <!--
                <td style="text-align:center">
                    {{ item.unidad }}
                </td>-->
                <td style="text-align:center">
                    {{ item.datos.codigo }}
                </td>                
                <td style="text-align:center">
                    {{ item.datos.descripcion }}
                </td>
                <td style="text-align:center">
                    {{ item.precio_unitario.facturado }}
                </td>
                <!-- fecha emision -->
                <td style="text-align:center">
                    {{ '0.00' }}
                </td>
                <!-- Total a pagar -->
                <td style="text-align:right;border-right:solid 1px #000000;padding:0 6 0 0;">
                    {{ item.valor_venta }}
                </td>
            </tr>
            {% endfor %}
            {% if items|length < 8 %}
            {% for i in (items|length + 1)..8 %}
            <tr>
                <td colspan="7" style="border-left:solid 1px #000000;border-right:solid 1px #000000;">&nbsp;</td>
            </tr>
            {% endfor %}
            {% endif %}
        </tbody>
    </table>
    {% if not retencion.observaciones is null %}
    <br />
    <div style="width:100%"><strong>Observaciones:</strong>&nbsp;"{{ retencion.observaciones }}"</div>
    {% endif %}

    {% if not monto_en_letras is null %}
    <br />
    <div style="width:100%"><strong>SON:</strong>&nbsp;{{ monto_en_letras }} SOLES</div>
    {% endif %}
