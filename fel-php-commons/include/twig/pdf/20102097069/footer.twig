<table style="width: 100%" cellspacing="0">
    <tr>
        <td style="width:100%;font-size:11;">
            {% if respuesta.sunat_mensaje != '' %}
                <span>{{ respuesta.sunat_mensaje|replace('/codigo/', '') }}</span>
            {% endif %}


            <span>COMPROBANTE ELECTRÓNICO {{ id }}</span><br/>
            {% if not respuesta.firma_hash is null %}
            <span>Código de seguridad (hash): {{ respuesta.firma_hash }}</span><br/>
            {% endif %}
            <span>Autorizado mediante
                {% block sunat_ri %}
                    FILL ME BY CLIENT
                {% endblock %}
            </span><br/>
            <span>Consulte su comprobante en</span>
            <a href="www.ecco.pe">www.ecco.pe</a>
            <br/>
            <span>Página [[page_cu]] de [[page_nb]]</span>
        </td>
    </tr>
</table>